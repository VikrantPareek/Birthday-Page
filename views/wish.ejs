<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Happy Birthday!</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", sans-serif;
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        color: #333;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .card {
        background: white;
        padding: 30px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        z-index: 2;
        position: relative;
      }

      .card h1 {
        font-size: 2.5rem;
        color: #ff6b81;
      }

      .card p {
        font-size: 1.2rem;
      }

      .cake {
        font-size: 4rem;
        margin-bottom: 20px;
      }

      .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #ff6b81;
        color: white;
        text-decoration: none;
        border-radius: 10px;
        margin-top: 15px;
        transition: background 0.3s ease;
      }

      .btn:hover {
        background-color: #ff4c61;
      }

      .balloon:nth-child(1) {
        left: 10%;
        animation-delay: 0s;
      }
      .balloon:nth-child(2) {
        left: 25%;
        animation-delay: 2s;
      }
      .balloon:nth-child(3) {
        left: 50%;
        animation-delay: 4s;
      }
      .balloon:nth-child(4) {
        left: 75%;
        animation-delay: 1s;
      }
      .balloon:nth-child(5) {
        left: 90%;
        animation-delay: 3s;
      }

      @keyframes floatUp {
        0% {
          bottom: -100px;
          transform: translateX(0) rotate(0deg);
          opacity: 0.8;
        }
        50% {
          transform: translateX(-20px) rotate(-10deg);
          opacity: 1;
        }
        100% {
          bottom: 110%;
          transform: translateX(20px) rotate(10deg);
          opacity: 0;
        }
      }

      /* Hearts */
      /* Balloons */
      .balloon {
        position: absolute;
        bottom: -100px;
        font-size: 4rem; /* Increased from 2.5rem */
        animation: floatUp 10s linear infinite;
        opacity: 0.8;
      }

      /* Hearts */
      .heart {
        position: absolute;
        bottom: 0;
        font-size: 3rem; /* Increased from 1.5rem */
        color: #ff6b81;
        animation: riseHeart 6s ease-in infinite;
        opacity: 0.7;
      }

      .heart:nth-child(6) {
        left: 20%;
        animation-delay: 0s;
      }
      .heart:nth-child(7) {
        left: 40%;
        animation-delay: 1s;
      }
      .heart:nth-child(8) {
        left: 60%;
        animation-delay: 2s;
      }
      .heart:nth-child(9) {
        left: 80%;
        animation-delay: 3s;
      }

      @keyframes riseHeart {
        0% {
          transform: scale(0.8) translateY(0);
          opacity: 0;
        }
        30% {
          transform: scale(1.2);
          opacity: 1;
        }
        100% {
          transform: scale(1) translateY(-150vh);
          opacity: 0;
        }
      }

      .birthday,
      .notBirthday {
        display: none;
      }
      /* Small devices (phones, less than 600px) */
      @media (max-width: 600px) {
        .card {
          padding: 20px;
          width: 90%;
        }

        .card h1 {
          font-size: 1.8rem;
        }

        .card p {
          font-size: 1rem;
        }

        .cake {
          font-size: 3rem;
        }

        video {
          width: 100%;
          height: auto;
        }

        .balloon,
        .heart {
          font-size: 2.5rem;
        }
      }

      /* Medium devices (tablets, 600px to 900px) */
      @media (min-width: 601px) and (max-width: 900px) {
        .card {
          padding: 25px;
          width: 80%;
        }

        .card h1 {
          font-size: 2.2rem;
        }

        .cake {
          font-size: 3.5rem;
        }

        video {
          width: 100%;
          height: auto;
        }
      }
    </style>
  </head>
  <body>
    <!-- Balloons -->
    <div class="balloon">üéà</div>
    <div class="balloon">üéà</div>
    <div class="balloon">üéà</div>
    <div class="balloon">üéà</div>
    <div class="balloon">üéà</div>

    <!-- Hearts -->
    <div class="heart">‚ù§Ô∏è</div>
    <div class="heart">‚ù§Ô∏è</div>
    <div class="heart">‚ù§Ô∏è</div>
    <div class="heart">‚ù§Ô∏è</div>

    <!-- Card -->
    <div class="card birthday">
      <div class="cake">üéÇ</div>
      <h1>Happy Birthday, <%= username.toUpperCase() %> !</h1>
      <p>Wishing you joy, love, and cake on your special day! üéâ</p>
      <video
        width="640"
        height="360"
        autoplay
        muted
        loop
        controls
        preload="auto"
      >
        <source src="/Vanshika.mp4" type="video/mp4" />
      </video>
    </div>
    <div class="card notBirthday">
      <h1><%= username.toUpperCase() %></h1>
      <p>It,s not your Birthday</p>
    </div>
    <script>
      const username = "<%= username.toUpperCase() %>";
      const birthday = document.getElementsByClassName("birthday");
      const notBirthday = document.getElementsByClassName("notBirthday");
      if (username.toUpperCase() === "VANSHIKA") {
        birthday[0].style.display = "block";
      }
      if (username.toUpperCase() != "VANSHIKA") {
        notBirthday[0].style.display = "block";
      }
    </script>
  </body>
</html>
